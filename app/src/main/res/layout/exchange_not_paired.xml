<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/exchange_not_paired_background">

    <ImageButton
        android:id="@+id/bShare"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/details"
        android:onClick="bShareClicked"
        android:scaleType="fitCenter"
        android:src="@drawable/share_button_mini"/>

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/details"
        android:onClick="bPairClicked"
        android:scaleType="fitCenter"
        android:src="@drawable/exchange_not_paired_pair_button"/>


    <TextView
        android:layout_width="110dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:fontFamily="@font/roboto_condensed_regular"
        android:text="@string/not_paired"
        android:gravity="center_vertical"
        android:textAlignment="center"

        android:textSize="18sp"/>

</RelativeLayout>
