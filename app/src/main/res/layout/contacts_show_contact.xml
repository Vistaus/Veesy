<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/showContactBackground"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:scrollbars="vertical">

    <TextView
        android:id="@+id/tVorname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/roboto_condensed_regular"
        android:onClick="tVornameClicked"
        android:paddingBottom="5dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tNachname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:fontFamily="@font/roboto_condensed_regular"
        android:onClick="tNachnameClicked"
        android:paddingBottom="10dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:drawableStart="@drawable/contacts_phone_img"
        android:fontFamily="@font/roboto_condensed_regular"
        android:onClick="tPhoneClicked"
        android:paddingBottom="10dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/black"/>

    <!--<TextView
        android:id="@+id/tMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:drawableStart="@drawable/contacts_mail_img"
        android:onClick="tMailClicked"
        android:textAlignment="center"
        android:textSize="20sp"/>-->
</LinearLayout>