<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/hintergrund_all_layouts"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/hintergrund_feedback" />

    <ImageView
        android:id="@+id/feedback_imgV"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignStart="@+id/feedback_textV"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/dataTransmissionSuccess"
        android:src="@drawable/haken_feedback" />

    <TextView
        android:id="@+id/feedback_textV"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_below="@+id/feedback_imgV"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:text="@string/success"
        android:textAlignment="center"/>

    <ImageButton
        android:id="@+id/bDetails"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/feedback_textV"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/feedback_imgV"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/details"
        android:onClick="bDetailsClicked"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_kontakte" />

    <ImageButton
        android:id="@+id/bHome"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/feedback_textV"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/feedback_imgV"
        android:layout_marginEnd="8dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/home"
        android:onClick="bHomeClicked"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_home" />


</RelativeLayout>