<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/feedback_background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/feedback_imgV"
        android:layout_width="82dp"
        android:layout_height="80dp"
        android:layout_alignStart="@+id/feedback_textV"
        android:layout_marginTop="50dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/data_transmission_success"
        android:src="@drawable/googleg_standard_color_18" />

    <TextView
        android:id="@+id/feedback_textV"
        android:layout_width="82dp"
        android:layout_height="22dp"
        android:layout_below="@+id/feedback_imgV"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:fontFamily="@font/roboto_condensed_regular"
        android:text="@string/failure"
        android:textAlignment="center"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/bDetails"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/details"
        android:onClick="bShareClicked"
        android:scaleType="fitCenter"
        android:src="@drawable/share_button_mini" />

    <ImageButton
        android:id="@+id/bHome"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/home"
        android:onClick="bHomeClicked"
        android:scaleType="fitCenter"
        android:src="@drawable/feedback_home_button" />

</RelativeLayout>